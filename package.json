{
  "name": "koa2-boilerplate",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=6.3",
    "npm": ">=3.10"
  },
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src/ --exec babel-node src/server.js",
    "start": "cross-env-shell NODE_ENV=production \"npm run build && node dist/server.js\"",
    "lint": "eslint . && stylelint **/*.scss",
    "test": "nyc mocha",
    "build": "npm-run-all clean --parallel build:*",
    "release": "npm-run-all clean build release:copy release:deps release:package",
    "clean": "rimraf public/static dist build release",
    "prettier": "prettier */**/*.js --write && git add --force && git status",
    "build:client": "cross-env NODE_ENV=production webpack --colors --config config/webpack.config.client.js",
    "build:server": "cross-env NODE_ENV=production webpack --colors --config config/webpack.config.server.js",
    "test:cover": "nyc --reporter=html npm test",
    "release:copy": "cross-env-shell \"shx mkdir -p release/$npm_package_name && shx cp -r dist/ public/  *.json release/$npm_package_name\" ",
    "release:deps": "cross-env-shell \"cd release/$npm_package_name && npm i --production\" ",
    "release:package": "cross-env-shell \"cd release/ && tar -zcvf $npm_package_name.tar.gz $npm_package_name\" "
  },
  "pre-commit": [
    "prettier",
    "lint"
  ],
  "author": "chenbin92 travisxu",
  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-ejs": "^4.1.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "source-map-support": "^0.5.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "bootstrap-sass": "^3.3.7",
    "chalk": "^1.1.3",
    "compression-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "eslint-config-egg": "^4.2.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-watch": "^3.1.2",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^1.1.5",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "jquery": "^3.2.1",
    "koa-webpack-dev-middleware": "^2.0.0",
    "koa-webpack-middleware": "^1.0.5",
    "mocha": "^3.5.3",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.2.1",
    "open-browser-webpack-plugin": "0.0.5",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.9.2",
    "resolve-path": "^1.3.3",
    "sass-loader": "^6.0.6",
    "should": "^13.1.0",
    "shx": "^0.2.2",
    "style-loader": "^0.18.2",
    "stylelint": "^8.2.0",
    "stylelint-config-recommended-scss": "^2.0.0",
    "stylelint-order": "^0.7.0",
    "stylelint-scss": "^2.1.0",
    "supertest": "^3.0.0",
    "url-loader": "^0.6.2",
    "vue-loader": "^13.7.0",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-node-externals": "^1.6.0"
  }
}
