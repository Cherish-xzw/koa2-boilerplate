{
  "name": "koa2-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod",
    "build": "better-npm-run build",
    "watch:assets": "npm run clean && webpack --watch --colors --display-error-details --config build/webpack.config.js",
    "lint": "esw .",
    "lint:watch": "npm run lint -- --watch",
    "clean": "rimraf src/public/* dist",
    "release:copy": "shx mkdir -p dist/$npm_package_name && shx cp -r src/ build/ *.js *.json .babelrc dist/$npm_package_name",
    "release:deps": "cd dist/$npm_package_name && npm i --production",
    "release:package": "cd dist && tar -zcvf $npm_package_name.tar.gz $npm_package_name",
    "release": "npm-run-all clean build release:copy release:deps release:package"
  },
  "betterScripts": {
    "start:dev": {
      "command": "nodemon --ignore src/assets/ --ignore src/public --ignore dist/ index.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "npm run build && node index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build": {
      "command": "npm-run-all --parallel clean lint && webpack --colors --display-error-details --config build/webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "pre-commit": [
    "lint"
  ],
  "author": "chenbin92",
  "license": "ISC",
  "dependencies": {
    "echarts": "^3.7.1",
    "jquery": "^3.2.1",
    "koa": "^2.3.0",
    "koa-ejs": "^4.1.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "supervisor": "^0.12.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "better-npm-run": "0.0.15",
    "chalk": "^1.1.3",
    "compression-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "eslint-config-egg": "^4.2.1",
    "eslint-watch": "^3.1.2",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^2.1.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "koa-webpack-dev-middleware": "^2.0.0",
    "koa-webpack-middleware": "^1.0.5",
    "mz": "^2.6.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "open-browser-webpack-plugin": "0.0.5",
    "pre-commit": "^1.2.2",
    "resolve-path": "^1.3.3",
    "sass-loader": "^6.0.6",
    "shx": "^0.2.2",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-middleware": "^1.12.0"
  }
}
